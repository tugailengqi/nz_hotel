<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lengqi.mapper.CityMapper">
    <update id="updateHotelNumber">
        UPDATE city SET hotal_number = hotal_number + #{number}
        WHERE id = #{cid}
    </update>
</mapper>